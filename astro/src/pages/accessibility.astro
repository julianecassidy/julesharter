---
import Layout from "../layouts/Page.astro";
import Container from "../components/Container.astro";

const seo = {
    title: "Accessibility Statement | Jules Harter",
    description:
        "JulesHarter.com is committed to making its website usable by all people by meeting or exceeding the requirements of the Web Content Accessibility Guidelines 2.0 Level AA (WCAG 2.0 AA).",
};
---

<Layout seo={seo}>
    <Container>
        <div class="accessibility">
            <h1>Accessibility Statement</h1>
            <p>
                JulesHarter.com is committed to making its website usable by all
                people, regardless of technology or ability by meeting or
                exceeding the requirements of the Web Content Accessibility
                Guidelines 2.0 Level AA (WCAG 2.0 AA).
            </p>
            <p>
                Please be aware that our efforts are ongoing. If you need
                assistance in using the processes found within this site, or
                have specific questions, concerns, or suggestions about the
                accessibility of this site, please contact us through the
                contact form.
            </p>
            <p>
                If you do encounter an accessibility issue, please be sure to
                specify the Web page and we will make all reasonable efforts to
                make that page accessible.
            </p>
        </div>
    </Container>
</Layout>
