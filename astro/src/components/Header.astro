---
import logo from "../logo.svg";
import NavBar from "./NavBar.astro"
---

<style>
    .header {
        display: flex;
        justify-content: space-between;
        margin-top: 60px;
        margin-bottom: 50px;
    }

    @media screen and (max-width: 636px) {
        .header img {
            max-width: 250px;
            margin-left: 30px;
        } 
    }

    @media screen and (min-width: 636px) {       
        .header img {
            max-width: 400px;
            margin-left: 30px;
        }
    }
</style>

<div class="header">
    <a href="/">
        <img src={logo}></img>
    </a>

    <NavBar />    

</div>